<odoo>
    <record id="cancel_voucher_wizard_form" model="ir.ui.view">
        <field name="name">cancel.voucher.wizard.form</field>
        <field name="model">cancel.voucher.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Voucher">
                <group>
                    <field name="cancel_voucher_reason"/>
                </group>
                <footer>
                    <button name="cancel_voucher" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cancel_voucher_reject_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Voucher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.voucher.wizard</field>
        <field name="view">form</field>
        <field name="view_id" ref="cancel_voucher_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
