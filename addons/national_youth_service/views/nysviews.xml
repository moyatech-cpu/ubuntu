<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Profile form view -->
    <record model="ir.ui.view" id="profile_form_view">
        <field name="name">profile.form</field>
        <field name="model">nationalyouth.partner</field>
        <field name="arch" type="xml">
            <form string="Partner Enquiry">
                <sheet>
                    <group>
                        <group string = "Personal Details" name="group_left">
                            <field name="title"/>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="id_no"/>
                            <field name="gender"/>
                            <field name="disability"/>
                            <field name="cell_phone_number"/>
                            <field name="email"/>
                            <field name="home_language"/>
                            <field name="employment_status"/>
                            <field name="occupation"/>
                            <field name="location_type"/>
                            <field name="population_group"/>
                            <field name="highest_education"/>
                            <field name="alternative_number"/>
                        </group>                    
                        <group string = "Address Details" name="group_right">
                            <field name="drivers_license"/>
                            <field name="license_code"/>
                            <field name="marital_status"/>
                            <field name="branch_id"/>
                            <field name="municipality"/>
                            <field name="Address"/>
                        </group>
                    </group>

                    <!-- Education and training -->
                    <group string = "Education and Training" >
                        <notebook>
                            <page string="Primary School">
                                <field name="primary_education" >
                                    <tree string="Primary education" editable="bottom">
                                        <field name="name"/>
                                        <field name="subjects"/>
                                        <field name="year"/>
                                    </tree>
                                </field>
                            </page>                        
                            <page string="High School">
                                <field name="secondary_education" >
                                    <tree string="Secondary education" editable="bottom">
                                        <field name="subject"/>
                                        <field name="achievement_level"/>
                                        <field name="symbol"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tertiary or Higher Education">
                                <field name="tertiary_education" >
                                    <tree string="Tertiary education" editable="bottom">
                                        <field name="name"/>
                                        <field name="subjects"/>
                                        <field name="year"/>
                                        <field name="qualification" widget="many2many_binary"/>
                                    </tree>
                                </field>
                            </page>                            
                            <page string="Computer Skills">
                                <field name="computer_skills" >
                                    <tree string="Tertiary education" editable="bottom">
                                        <field name="qualification"/>
                                        <field name="ms_word"/>
                                        <field name="excel"/>
                                        <field name="database"/>
                                        <field name="graphic_design"/>
                                        <field name="outlook"/>
                                        <field name="accounts"/>
                                        <field name="attachments" widget="many2many_binary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>

                    <!-- Work experience -->
                    <group string = "Work experience" >
                        <notebook>
                            <page>
                                <field name="work_experience" >
                                    <tree string="Work experience" editable="bottom">
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="position"/>
                                        <field name="reason_for_leaving"/>
                                    </tree>
                                </field>
                            </page>     
                        </notebook>
                    </group>

                    <!-- References -->
                    <group string="References">
                        <notebook>
                            <page string="Reference">
                                <field name="references" >
                                    <tree string="References" editable="bottom">
                                        <field name="organisation"/>
                                        <field name="name"/>
                                        <field name="job_title"/>
                                        <field name="telephone"/>
                                        <field name="Mobile"/>
                                    </tree>
                                </field>
                            </page>     
                        </notebook>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <!-- Action the profile -->
    <record model="ir.actions.act_window" id = "profile_menu_action">
        <field name="name">Profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nationalyouth.partner</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- menu for the profile -->
    <menuitem id="main_nys_menu" name="National Youth Service"/>
    <menuitem id="profile_menu" parent="main_nys_menu" name="Beneficiary Profile" action= "profile_menu_action" groups="national_youth_service.group_beneficiary_nys"/>
<!-- 
    Partner views -->

    <record id="nys_kanban_view" model="ir.ui.view">
        <field name="name">nationalyouth.partnerz.kanban</field>
        <field name="model">nationalyouth.partnerz</field>
        <field name="arch" type="xml">
           <kanban>
                <field name="name"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content">
                            <!-- title -->
                            <!-- Session name: -->
                            <field name="name"/>
                            <br/>
                            <br/>
                            Created:
                            <br/>
                            <field name="date"/>
                            <br/>
                            <div class="oe_kanban_bottom_left">
                                <span class='oe_kanban_mail_new' title='Unread Messages'>
                                    <i class="fa fa-star-o"/>
                                    <i class="fa fa-clock-o"/>
                                </span>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <span class='oe_kanban_mail_new' title='Unread Messages'>
                                    <i class="fa fa-circle" aria-hidden="false"/>
                                    <i class="fa fa-user" aria-hidden="true"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id = "partner_menu_action">
        <field name="name">NYS Project Application</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nationalyouth.partnerz</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="beneficiary_menu" parent="main_nys_menu" name="project Application" action= "partner_menu_action" groups="national_youth_service.group_partner_nys"/>

</odoo>